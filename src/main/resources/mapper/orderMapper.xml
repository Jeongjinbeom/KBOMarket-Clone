<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goods.dao.OrderDAO">

	<insert id="insertCart" parameterType="orderDTO">
		insert into kboorder (userId, prdNo, orderPrice, orderSize, qty) values(#{userId}, #{prdNo}, #{orderPrice}, #{orderSize}, #{qty})
	</insert>
	
	<select id="getOrderUser" parameterType="String" resultType="userDTO">
		select * from kbouser where userId=#{userId}
	</select>
</mapper>